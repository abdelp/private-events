<h1 class="text-center text-primary">Create Event</h1>
<div class="d-flex justify-content-center">
  <%= form_for [@user, @event] do |e| %>
    <div class="form-group">
      <p><%= e.label :name, nil %></p>
      <p><%= e.text_field :name, class: 'form-control' %></p>
    </div>
    <div class="form-group">
      <p><%= e.label :description %></p>
      <p><%= e.text_area :description, class: 'form-control' %></p>
    </div>
    <div class="form-group">
      <p><%= e.label :date %></p>
      <p><%= e.date_field :date, class: 'form-control' %></p>
    </div>
    <div class="form-row text-center">
      <div class="col-12">
        <%= e.submit 'Create', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>