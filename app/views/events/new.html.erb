<h1 class="text-center text-primary">Create Event</h1>
<div class="d-flex justify-content-center">
  <%= form_for [@user, @event] do |e| %>
    <div class="form-group">
      <p><%= e.label :name, nil, class: 'col col-form-label' %></p>
      <p><%= e.text_field :name, class: 'form-control' %></p>
    </div>
    <div class="form-group">
      <p><%= e.label :description %></p>
      <p><%= e.text_area :description %></p>
    </div>
    <div class="form-group">
      <p><%= e.label :date %></p>
      <p><%= e.date_field :date %></p>
    </div>
    <div>
      <%= e.submit %>
    </div>
  <% end %>
</div>