<div class="border backgroundWhite">
  <div class="row">
        <div class="col-6">
            <h2 class="text-info">Event List</h2>
        </div>
    </div>
    <br />
<div>
<table class="table table-striped border">
  <tr>
      <th class="table-secondary">
          Name
      </th>
      <th class="table-secondary">Description</th>
      <th class="table-secondary">Date</th>
      <th class="table-secondary">Creator</th>
      <th class="table-secondary"></th>
  </tr>
  <% @events.each do |e| %>
    <tr>
      <td class="col-2">
        <%= e.name %>
      </td>
      <td class="col-6">
        <%= e.description %>
      </td>
      <td class="col-2">
        <%= e.date %>
      </td>
      <td class="col-2">
        <%= e.creator_name %>
      </td>
      <td class="col-2">
        <%= link_to "view", e %>
      </td>
    </tr>
  <% end %>
</table>
