<div class="container mt-4">
  <h2 class="text-info">Profile Page</h2>
  <div>
    <p class="lead">User: <%= @user.name %></p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @user.attended_events do |e| %>
      <%= e.description %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= render partial: 'events/events', locals: {events: @events} %>
  </div>

  <div class="row">
    <h3 class="text-info">Upcoming events</h3>
    <%= render partial: 'events/events', locals: {events: @upcoming_events} %>
  </div>

  <div class="row">
    <h3 class="text-info">Previously events</h3>
    <%= render partial: 'events/events', locals: {events: @past_events} %>
  </div>
</div>